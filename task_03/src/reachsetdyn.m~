function reachsetdyn(alpha, t1, t2, N, filename)
    if nargin == 5
        v = VideoWriter(filename);
        v.FrameRate = 2;
        v.Quality = 100;
        open(v);
        step = (t2 - t1) / N;
        for i = 1:N
            [xes, switches] = reachset(alpha, t1);
            plot([xes(:, 1); xes(1, 1)], [xes(:,2); xes(1, 2)]);
            hold on;
            plot(switches(:, 1), switches(:,2));
            xlabel('x_1');
            ylabel('x_2');
            frame = getFrame(gcf);
            writeVideo(v, frame);
            t1 = t1 + step;
            hold off;
        end
        close(v);
    else
        if t1 ~= t2
            step = (t2 - t1) / N;
            for i = 1:N
                [xes, switches] = reachset(alpha, t1);
                plot([xes(:, 1); xes(1, 1)], [xes(:,2); xes(1, 2)]);
                hold on;
                plot(switches(:, 1), switches(:,2));
                xlabel('x_1');
                ylabel('x_2');
                t1 = t1 + step;
                hold off;
            end
        else
            
    hold off;
end

